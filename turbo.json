{
  "$schema": "https://turbo.build/schema.json",
  "globalEnv": ["GITHUB_TOKEN"],
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", ".next/**"]
    },
    "test": {
      "outputs": ["coverage/"],
      "dependsOn": []
    },
    "lint": {
      "outputs": []
    },
    "lint:faucet": {
      "cache": false
    },
    "dev": {
      "cache": false
    },
    "dev:web": {
      "cache": false
    },
    "dev:bridge": {
      "env": [
        "NEXT_PUBLIC_INFURA_API_KEY",
        "NEXT_PUBLIC_SITE_URL",
        "NEXT_PUBLIC_VERCEL_URL"
      ],
      "cache": false
    },
    "dev:faucet": {
      "env": [
        "TWITTER_ID",
        "TWITTER_SECRET",
        "NEXTAUTH_URL",
        "NEXTAUTH_SECRET"
      ],
      "cache": false
    },
    "dev:cms": {
      "cache": false
    },
    "dev:nft": {
      "cache": false
    },
    "dev:template": {
      "cache": false
    },
    "e2e:test:template": {
      "cache": false
    }
  }
}
