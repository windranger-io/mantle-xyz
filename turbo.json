{
  "$schema": "https://turbo.build/schema.json",
  "globalEnv": [
    "GITHUB_TOKEN",
    "I18NEXUS_API_KEY",
    "I18NEXUS_VERSION",
    "I18NEXUS_API_URL",
    "I18NEXUS_PRE_BUILD",
    "VERCEL_ENV"
  ],
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", ".next/**"]
    },
    "test": {
      "outputs": ["coverage/"],
      "dependsOn": []
    },
    "lint": {
      "outputs": []
    },
    "lint:faucet": {
      "cache": false
    },
    "dev": {
      "cache": false
    },
    "dev:web": {
      "cache": false
    },
    "dev:bridge": {
      "env": [
        "NEXT_PUBLIC_INFURA_API_KEY",
        "NEXT_PUBLIC_SITE_URL",
        "NEXT_PUBLIC_VERCEL_URL"
      ],
      "cache": false
    },
    "dev:faucet": {
      "env": [
        "TWITTER_ID",
        "TWITTER_SECRET",
        "NEXTAUTH_URL",
        "NEXTAUTH_SECRET"
      ],
      "cache": false
    },
    "dev:converter": {
      "env": [
        "NEXT_PUBLIC_INFURA_API_KEY",
        "NEXT_PUBLIC_SITE_URL",
        "NEXT_PUBLIC_VERCEL_URL",
        "NEXT_PUBLIC_L1_CHAIN_ID",
        "NEXT_PUBLIC_L2_CHAIN_ID"
      ],
      "cache": false
    },
    "dev:cms": {
      "cache": false
    },
    "dev:nft": {
      "env": [
        "GA_TRACKING_ID",
        "NEXT_PUBLIC_VERCEL_ENV",
        "NEXT_PUBLIC_VERCEL_URL"
      ],
      "cache": false
    },
    "dev:template": {
      "cache": false
    },
    "e2e:test:template": {
      "cache": false
    }
  }
}
