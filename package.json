{
  "name": "mantle-xyz",
  "version": "0.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "ci:template": "turbo e2e:test:template",
    "build": "turbo run build",
    "build:locales": "turbo run build:locales",
    "dev": "turbo run dev",
    "dev:web": "turbo run dev:web",
    "dev:faucet": "turbo run dev:faucet",
    "dev:bridge": "turbo run dev:bridge",
    "dev:converter": "turbo run dev:converter",
    "dev:cms": "turbo run dev:cms",
    "dev:events": "turbo run dev:events",
    "dev:template": "turbo run dev:template",
    "test": "turbo run test",
    "lint": "turbo run lint",
    "lint:faucet": "turbo run lint:faucet",
    "lint:bridge": "turbo run lint:bridge",
    "lint:converter": "turbo run lint:converter",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.4.0",
    "@commitlint/config-conventional": "^17.4.0",
    "@mantle/eslint-config-next": "workspace:*",
    "@types/node": "18.11.3",
    "husky": "^8.0.3",
    "lint-staged": "^13.1.0",
    "prettier": "^2.8.2",
    "turbo": "^1.10.6",
    "typescript": "^4.9.4"
  },
  "engines": {
    "node": ">=16.15.0"
  },
  "packageManager": "pnpm@8.6.5"
}
